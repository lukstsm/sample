<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/game_session_player_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/game_session_details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bingo"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_session_player_info_container"/>

    <TextView
        android:id="@+id/game_session_details_jackpot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jackpot: Â£200"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/game_session_details_name"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/game_session_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date: 16th May"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/game_session_details_jackpot"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>